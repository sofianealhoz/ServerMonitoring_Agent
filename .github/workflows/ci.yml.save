name: Continuous Integration

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: 3.8

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Run tests
        run: |
          pytest

  lint:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: 3.8

      - name: Install flake8
        run: |
          python -m pip install flake8

      - name: Run flake8
        run: |
          flake8 path/to/your/python/files

  static_analysis:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: 3.8

      - name: Install bandit
        run: |
          python -m pip install bandit

      - name: Run bandit
        run: |
          bandit -r path/to/your/python/files

  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Set up Python
        uses: actions/setup-python@v2
        with:
          python-version: 3.8

      - name: Install coverage
        run: |
          python -m pip install coverage

      - name: Run tests with coverage
        run: |
          coverage run -m unittest discover -s path/to/your/tests
          coverage report -m
    - flake8 path/to/your/python/files

bandit:
  stage: static_analysis
  script:
    - bandit -r path/to/your/python/files

coverage:
  stage: test
  script:
    - coverage run -m unittest discover -s path/to/your/tests
    - coverage report -m

